struct _AKAZE {
    void* p;
    
    void close(){
        AKAZE_Close(&this);
    }
    
    KeyPoints detect(Mat src){
        return AKAZE_Detect(&this, src);
    }
    
    KeyPoints detectAndCompute(Mat src, Mat mask, Mat desc){
        return AKAZE_DetectAndCompute(&this, src, mask, desc);
    }
}

alias AKAZE = _AKAZE*;

AKAZE newAKAZE(){
    return AKAZE_Create();
}

